grammar c;

program: statement* EOF;
statement:
	'{' statement* '}' |
	'if' '(' expression ')' |
	declaration EOS
;

declaration:
	INT_TYPE IDENTIFIER ASSIGN_OP INT_LITERAL |
	FLT_TYPE IDENTIFIER ASSIGN_OP FLT_LITERAL |
	CHR_TYPE IDENTIFIER ASSIGN_OP CHR_LITERAL
;

expression:
	IDENTIFIER ASSIGN_OP LITERAL
;






fragment DIGIT: '0'..'9';

INT_TYPE: 'int';
FLT_TYPE: 'float';
STR_TYPE: 'char*';
CHR_TYPE: 'char';

IDENTIFIER: [a-zA-Z_][a-zA-Z0-9_]*;

// LITERAL: INT_LITERAL | FLT_LITERAL | STR_LITERAL | CHR_LITERAL;

INT_LITERAL: DIGIT+;
FLT_LITERAL: DIGIT+'.'DIGIT*'f'?;
STR_LITERAL: '"'.*?'"';
CHR_LITERAL: '\''.'\'';

ASSIGN_OP: '=';

WS: [ \n\r\t] -> skip;
EOS: ';' ;
